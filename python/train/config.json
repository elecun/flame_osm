{
  "model": {
    "in_channels": 3,
    "num_classes": 1,
    "graph_layout": "body_head",
    "graph_strategy": "spatial",
    "edge_importance_weighting": true,
    "dropout": 0.5
  },
  "training": {
    "batch_size": 16,
    "epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 1e-4,
    "grad_clip": 1.0,
    "lr_step_size": 30,
    "lr_gamma": 0.1,
    "early_stopping_patience": 10
  },
  "data": {
    "sequence_length": 64,
    "num_keypoints": 17,
    "head_pose_dim": 6,
    "augmentation": true,
    "num_workers": 4
  },
  "task": {
    "type": "regression",
    "target": "occupant_status"
  },
  "paths": {
    "data_path": "data/train_data.json",
    "val_data_path": "data/val_data.json",
    "test_data_path": "data/test_data.json",
    "checkpoint_dir": "checkpoints",
    "log_dir": "logs",
    "export_dir": "exported_models"
  },
  "export": {
    "formats": ["pytorch", "onnx", "tensorrt"],
    "tensorrt_precision": "fp16",
    "max_batch_size": 16
  }
}
