{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Flame",
            "type": "shell",
            "command": "make",
            "args": [
                "flame"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Active File",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++20",
                "-I${workspaceFolder}/flame/include",
                "-I/usr/include"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}